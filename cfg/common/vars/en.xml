    <!-- Image path to use for a note of "warning" type. -->
  <variable id="notice Note Image Path">Configuration/OpenTopic/cfg/common/artwork/Logo/hand.gif</variable>

   <variable id="caution Note Image Path">hand.gif</variable>
    <!-- Image path to use for a note of "trouble" type. -->
    <variable id="trouble Note Image Path">warning.gif</variable>
